package{	import flash.display.Sprite;	import com.physicscodes.math.Vector2D;	import com.physicscodes.objects.Ball;	import com.physicscodes.objects.Wall;	public class BouncingOffInclinedWall2 extends Sprite{		public function BouncingOffInclinedWall2():void{			init();		}		private function init():void{			// create the wall to bounce off			 				var wall:Wall;			wall=new Wall(new Vector2D(50,200),new Vector2D(700,500));            addChild(wall);			// create ball to bounce				var ball:Ball;			ball = new Ball(15,0x0000ff,90);			ball.pos2D = new Vector2D(100,50);			addChild(ball);						// initialize the test tunnelling condition            var wdir:Vector2D = wall.dir;			   		    var ballp1:Vector2D = wall.p1.subtract(ball.pos2D);			var proj1:Number = ballp1.projection(wdir);                			var dist:Vector2D = ballp1.addScaled(wdir.unit(), proj1*(-1));   			if (dist.dotProduct(wall.normal) > 0){				wall.side = 1;			}else{				wall.side = -1;			}			// trigger bouncing			var bouncer:InclinedWallBouncer2=new InclinedWallBouncer2(ball,wall);			bouncer.startTime(10);		}	}}