package{	import flash.display.Sprite;		public class TrigFunctions extends Sprite{		public function TrigFunctions(){			init();		}		private function init():void{			var graph:Graph = new Graph(-720,720,-1,1,275,200,480,320);						graph.drawgrid(180,45,0.5,0.1);						graph.drawaxes('x','y');				addChild(graph);			var xA:Array = new Array();			var yA:Array = new Array();			for (var i:uint=0; i<=200; i++){				xA[i] = (i-100)*7.2;				yA[i] = f(xA[i]);						   			}			graph.plot(xA,yA,0xff0000,false,true);			//trace(Math.atan(1)*180/Math.PI);			//trace(Math.atan2(-2,-2)*180/Math.PI);		}		private function f(x:Number):Number{			var y:Number;//			y = Math.sin(x*Math.PI/180);			y = Math.cos(x*Math.PI/180);//			y = Math.cos((x-90)*Math.PI/180);			//			y = Math.tan(x*Math.PI/180);			return y;		}	}}