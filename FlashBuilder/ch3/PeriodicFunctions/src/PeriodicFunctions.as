package{	import flash.display.Sprite;		public class PeriodicFunctions extends Sprite{		public function PeriodicFunctions(){			init();		}		private function init():void{			var graph1:Graph = new Graph(0,10,0,2,50,180,450,100);						//graph1.drawgrid(1,0.2,1,0.2);								graph1.drawaxes('x','y');				addChild(graph1);			var graph2:Graph = new Graph(0,10,0,2,50,380,450,100);						//graph2.drawgrid(1,0.2,1,0.2);						graph2.drawaxes('x','y');				addChild(graph2);						var xA:Array = new Array();			var y1A:Array = new Array();			var y2A:Array = new Array();			for (var i:uint=0; i<=1000; i++){				xA[i] = i*0.01;				y1A[i] = f1(xA[i]);					y2A[i] = f2(xA[i]);								}			graph1.plot(xA,y1A,0x0000ff,false,true);			graph2.plot(xA,y2A,0x0000ff,false,true);		}		private function f1(x:Number):Number{			var y:Number;			y = x%2;			return y;		}				private function f2(x:Number):Number{			var y:Number;			if (x%1<0.5){				y = 0;			}else{				y = 1;			}			return y;		}	}}