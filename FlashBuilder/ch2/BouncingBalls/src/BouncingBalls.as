package {	import flash.display.Sprite;		import flash.events.Event;		public class BouncingBalls extends Sprite {		private var g:Number=0.1; // acceleration due to gravity		private var balls:Array;		public function BouncingBalls() {			init();		}		private function init():void {					balls = new Array();			for (var i:uint=0; i<5; i++){				var ball:Ball = new Ball();					ball.x = 50;				ball.y = 75;				ball.vx = Math.random()*5;				ball.vy = (Math.random()-0.5)*4;				addChild(ball);					balls.push(ball);			}			addEventListener(Event.ENTER_FRAME,onEachTimestep); 		}		private function onEachTimestep(evt:Event):void{			for (var i:uint=0; i<5; i++){				var ball:Ball = balls[i];				ball.vy += g;     							ball.x += ball.vx; 				ball.y += ball.vy; 							if (ball.y > 350){					ball.y = 350;					ball.vy *= -0.8;   				}			}		}	}}