package {	import flash.display.Sprite;		import flash.events.Event;		public class Velocity extends Sprite {		private var vx:Number=2;  // initial horizontal speed		private var ball:Ball;		public function Velocity() {			init();		}		private function init():void {					ball = new Ball();				ball.x = 50;			ball.y = 100;			addChild(ball);				addEventListener(Event.ENTER_FRAME,onEachTimestep); 		}		private function onEachTimestep(evt:Event):void{			ball.x += vx; // horizontal speed increases horizontal position		}	}}