package{	import flash.display.Sprite;	public class Ch2Codes extends Sprite{		public function Ch2Codes(){			init();		}				private function init():void{			trace(giveMeARandomNumber());			trace(addNumbers(12.5,6.6));			trace(divideByZero(0));						trace(divideByZero(2));			trace(divideByZero(-4));							var xArr:Array = new Array();			var yArr:Array = new Array();			xArr = [1,2];			yArr = [3,4];			var zArr:Array = new Array(xArr,yArr);			trace(zArr[0][1]); 			trace(zArr[1][0]); 						var x:int = 5;			var y:int = 3;						trace(x%y); // gives 2						var z:int;			z = x++; // assigns the value of x to z, then increments x			trace(z); // gives 5			z = ++x  // increments the value of x, then assigns it to z			trace(z); //gives 7									var a:int = 1;						a = a + 1; 			trace(a); // gives 2			a += 1; // shortened form of a = a + 1			trace(a); // gives 3			a = 4*a; 			trace(a); // gives 12			a *= 4; // shortened form of a = 4*a 			trace(a); // gives 48						trace(Math.E);			trace(Math.PI);						forLoopExample();			whileLoopExample1();						whileLoopExample2();								}				private function giveMeARandomNumber():Number {			return(Math.random()); 		}				private function addNumbers(x:Number,y:Number):Number {			return(x+y); 		}				private function divideByZero(x:Number):Number{			return(x/0);		}				private function forLoopExample():void{			var sum:Number = 0;			for (var i:int = 1; i <= 100; i++) { 				sum += i; 			}			trace(sum);		}				private function whileLoopExample1():void{			var sum:Number = 0;			var i:int = 1;			while (sum < 1000) { 				sum += i;				i++;			}			trace(i-1);		}						private function whileLoopExample2():void{			var sum:Number = 0;			var i:int = 1;			while (i <= 100) { 				sum += i;				i++;			}			trace(sum);		}			}}