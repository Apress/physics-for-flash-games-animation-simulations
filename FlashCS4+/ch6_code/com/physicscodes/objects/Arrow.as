package com.physicscodes.objects {	import flash.display.Sprite;	public class Arrow extends Sprite {		private var dalpha:Number = 5;		public function Arrow(xpos:Number=0, ypos:Number=0, magnitude:Number=10, angle:Number=0, arrowcolour:uint=0x000000):void {			//! draw the body of the arrow			graphics.lineStyle(4, arrowcolour);			graphics.moveTo(xpos, ypos);			graphics.lineTo(xpos+magnitude*Math.cos(angle*Math.PI/180), ypos+magnitude*Math.sin(angle*Math.PI/180));			//! draw the arrows			graphics.moveTo(xpos+magnitude*0.85*Math.cos((angle+dalpha)*Math.PI/180), ypos+magnitude*0.85*Math.sin((angle+dalpha)*Math.PI/180));			graphics.lineTo(xpos+magnitude*Math.cos(angle*Math.PI/180), ypos+magnitude*Math.sin(angle*Math.PI/180));			graphics.lineTo(xpos+magnitude*0.85*Math.cos((angle-dalpha)*Math.PI/180), ypos+magnitude*0.85*Math.sin((angle-dalpha)*Math.PI/180));		}	}}